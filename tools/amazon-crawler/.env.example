# Supabase 연결 정보
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# 크롤링 설정
MAX_PRODUCTS=10
HEADLESS=true

# ============================================
# 크롤링 모드 선택
# ============================================
# bestsellers: 베스트셀러 (기본값)
# new-releases: 신상품
# movers-shakers: 인기 급상승 상품 (Movers & Shakers)
# search: 키워드 검색 (SEARCH_KEYWORD 필요)
CRAWL_MODE=bestsellers

# 검색 모드일 때 사용할 키워드 (CRAWL_MODE=search 필요)
SEARCH_KEYWORD=wireless earbuds

# 특정 카테고리 선택 (선택사항)
# electronics, beauty, home-garden, fashion, toys, books, all
CATEGORY=all

